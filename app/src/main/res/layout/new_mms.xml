            android:id="@+id/sms_details_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="true"
            android:paddingTop="10dp"
            tools:ignore="MissingConstraints">


            <Button
